{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/web/*"],
      "@core/*": ["core/*"],
      "@shared/*": ["shared/*"],
      "@tests/*": ["tests/*"],
      "@docs/*": ["docs/*"],
      "@config/*": ["config/*"],
      "@components/*": ["shared/components/*"],
      "@utils/*": ["shared/utils/*"],
      "@types/*": ["shared/types/*"],
      "@services/*": ["core/*"],
      "@hooks/*": ["shared/hooks/*"],
      "@constants/*": ["shared/constants/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}