#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting
echo "ğŸ“ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed. Please fix the issues before committing."
  exit 1
fi

# Run type checking
echo "ğŸ”§ Running TypeScript type check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix the type errors before committing."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run test:coverage
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the failing tests before committing."
  exit 1
fi

# Run refactor verification
echo "ğŸ” Running refactor verification..."
npm run refactor:verify
if [ $? -ne 0 ]; then
  echo "âŒ Refactor verification failed. Please fix the issues before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
